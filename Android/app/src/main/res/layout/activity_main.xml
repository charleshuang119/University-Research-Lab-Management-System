<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/staffMenu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src= "@drawable/ic_staffs"
            android:clickable="true"
            android:layout_margin="20dp"/>

        <ImageView
            android:id="@+id/progressMenu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:src="@drawable/ic_progress_menu"
            android:layout_margin="20dp"/>

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center">

    <ImageView
        android:id="@+id/inventoryMenu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src= "@drawable/ic_inventory_menu"
        android:clickable="true"
        android:layout_margin="20dp"
        />

    <ImageView
        android:id="@+id/fundsMenu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src = "@drawable/ic_funding_menu"
        android:clickable="true"
        android:layout_margin="20dp"/>
</LinearLayout>


</LinearLayout>
